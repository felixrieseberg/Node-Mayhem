    script(src='/socket.io/socket.io.js')

  body
    script.
      window.onReady(function onReady() {
        var socket = io.connect();
        game.socket = socket;
        game.gameReady = function() {
          socket.emit('gameReady');
          game.addEnemy({id: 123, p: { x: 333, y: 333 }, z: 4});
        }

        game.onload();

        if (me.device.isMobile && !navigator.isCocoonJS) {
          window.document.addEventListener("touchmove", function (e) {
            e.preventDefault();
            window.scroll(0, 0);
            return false;
          }, false);

          (function () {
            window.scrollTo(0, 1);
            me.video.onresize(null);
          }).defer();

          me.event.subscribe(me.event.WINDOW_ONRESIZE, function (e) {
            window.scrollTo(0, 1);
          });
        }
        
        socket.on('addPlayer', function (data) {
          game.addEnemy(data);
        });

        socket.on('removePlayer', function (id) {
          game.removeEnemy({ id: id });
        });

        socket.on('addPlayers', function(players) {
          for(var id in players) {
            game.addEnemy(players[id]);
          }
        });
        
        socket.on('updatePlayerState', function(data) {
          game.updatePlayerState(data);
        });

        socket.on('fireBullet', function(source, target) {
          game.fireBullet(source, target);
        });
      });

      var audioOn = true;
      function switchSound() {
        if (audioOn == true) {
            me.audio.muteAll()
            document.getElementById("soundSwitch").text = "Enable Sound";
        } else {
            me.audio.unmuteAll()
        }
      }
    div(class="wrapper")
        div(id="screen")
    footer
        small
            a#soundSwitch(href="#", onclick="me.audio.muteAll()")="Disable Sound"
